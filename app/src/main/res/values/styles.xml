<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/material_deep_teal_500</item>
        <item name="colorPrimaryDark">@color/material_deep_teal_500</item>
        <item name="colorAccent">@color/material_deep_teal_200</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="editText">
        <item name="android:background">@drawable/rectangle_edittext</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">200dp</item>
    </style>

    <style name="editText.adjustments">
        <item name="android:layout_width">275dp</item>
    </style>

    <style name="editText.editText_name">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_width">275dp</item>
    </style>

    <style name="button">
        <item name="android:background">@color/material_deep_teal_500</item>
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">#000000</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="table_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/material_deep_teal_200</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="table_header">
        <item name="android:textSize">18sp</item>
        <item name="android:background">@color/material_deep_teal_500</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="table_header_textView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="table_header_imgView">
        <item name="android:layout_gravity">right|top</item>
    </style>
</resources>
